<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema id="org.gnome.shell.extensions.rocketbar" path="/org/gnome/shell/extensions/rocketbar/">

        <!-- general page -->
        <key type="b" name="taskbar-enabled">
            <default>true</default>
            <summary>Enable Taskbar</summary>
        </key>
        <key type="b" name="taskbar-show-favorites">
            <default>true</default>
            <summary>Show Favorites</summary>
        </key>
        <key type="b" name="taskbar-isolate-workspaces">
            <default>true</default>
            <summary>Isolate Workspaces</summary>
        </key>
        <key type="b" name="appbutton-enable-tooltips">
            <default>true</default>
            <summary>Enable Tooltips</summary>
        </key>
        <key type="b" name="appbutton-enable-indicators">
            <default>true</default>
            <summary>Enable Indicators</summary>
        </key>
        <key type="b" name="appbutton-enable-notification-badges">
            <default>true</default>
            <summary>Enable Notification Badges</summary>
        </key>
        <!-- /general page -->

        <!-- customize page -->
        <key type="s" name="taskbar-position">
            <default>'left'</default>
            <summary>Taskbar position in the panel</summary>
        </key>
        <key type="i" name="taskbar-position-offset">
            <default>1</default>
            <summary>Taskbar position offset</summary>
        </key>
        <key type="b" name="taskbar-preserve-position">
            <default>false</default>
            <summary>Preserve the selected Taskbar position</summary>
        </key>
        <key type="i" name="appbutton-icon-size">
            <default>20</default>
            <summary>App Buttons icon size</summary>
        </key>
        <key type="i" name="appbutton-icon-padding">
            <default>8</default>
            <summary>App Buttons icon padding</summary>
        </key>
        <key type="i" name="appbutton-vertical-margin">
            <default>2</default>
            <summary>App Buttons vertical margin</summary>
        </key>
        <key type="i" name="appbutton-spacing">
            <default>0</default>
            <summary>App Buttons spacing</summary>
        </key>
        <key type="i" name="appbutton-roundness">
            <default>50</default>
            <summary>App Buttons roundness</summary>
        </key>
        <key type="b" name="appbutton-backlight">
            <default>true</default>
            <summary>App Buttons Dominant color backlight</summary>
        </key>
        <key type="i" name="appbutton-backlight-intensity">
            <default>2</default>
            <summary>App Buttons backlight intensity</summary>
        </key>
        <key type="b" name="indicator-dominant-color-active">
            <default>true</default>
            <summary>Use dominant color for active indicators</summary>
        </key>
        <key type="s" name="indicator-color-active">
            <default>'rgb(53, 132, 228)'</default>
            <summary>Active indicators color when dominant color is not enabled</summary>
        </key>
        <key type="b" name="indicator-dominant-color-inactive">
            <default>true</default>
            <summary>Use dominant color for inactive indicators</summary>
        </key>
        <key type="s" name="indicator-color-inactive">
            <default>'rgb(255, 255, 255)'</default>
            <summary>Inactive indicators color when dominant color is not enabled</summary>
        </key>
        <key type="s" name="indicator-position">
            <default>'top'</default>
            <summary>Indicators position</summary>
        </key>
        <key type="i" name="indicator-size">
            <default>4</default>
            <summary>Indicators size</summary>
        </key>
        <key type="i" name="indicator-display-limit">
            <default>3</default>
            <summary>Max number of indicators to display for running apps</summary>
        </key>
        <key type="s" name="notification-badge-color">
            <default>'rgb(255, 0, 0)'</default>
            <summary>Notification Badge color</summary>
        </key>
        <key type="s" name="notification-badge-border-color">
            <default>'rgb(70, 70, 70)'</default>
            <summary>Notification Badge border color</summary>
        </key>
        <key type="s" name="notification-badge-position">
            <default>'bottom_right'</default>
            <summary>Notification Badge position</summary>
        </key>
        <key type="i" name="notification-badge-size">
            <default>5</default>
            <summary>Notification Badge size</summary>
        </key>
        <key type="i" name="notification-badge-margin">
            <default>7</default>
            <summary>Notification Badge margin</summary>
        </key>
        <key type="i" name="tooltip-show-delay">
            <default>500</default>
            <summary>Tooltips show delay</summary>
        </key>
        <!-- /customize page -->

        <!-- behavior page -->
        <key type="b" name="appbutton-enable-drag-and-drop">
            <default>true</default>
            <summary>Allow Drag and Drop</summary>
        </key>
        <key type="b" name="appbutton-enable-scroll">
            <default>true</default>
            <summary>Scroll to cycle app windows</summary>
        </key>
        <key type="s" name="appbutton-running-app-activate-behavior">
            <default>'new_window'</default>
            <summary>Running apps activation behavior</summary>
        </key>
        <key type="b" name="panel-enable-middle-button">
            <default>true</default>
            <summary>Middle click on panel empty space to mute/unmute sound volume</summary>
        </key>
        <key type="b" name="panel-enable-scroll">
            <default>true</default>
            <summary>Scroll panel to changes sound volume</summary>
        </key>
        <key type="i" name="panel-scroll-volume-change-speed">
            <default>2</default>
            <summary>Sound volume change speed</summary>
        </key>
        <key type="i" name="panel-scroll-volume-change-speed-ctrl">
            <default>10</default>
            <summary>Sound volume change speed when Ctrl pressed</summary>
        </key>
        <key type="b" name="hotcorner-enable-in-fullscreen">
            <default>true</default>
            <summary>Enable Hot Corner in fullscreen mode</summary>
        </key>
        <key type="b" name="activities-enable-click-override">
            <default>true</default>
            <summary>Activities right button click to show apps screen</summary>
        </key>
        <key type="b" name="overview-enable-empty-space-clicks">
            <default>true</default>
            <summary>Click Overview empty space to close it or show apps screen</summary>
        </key>
        <!-- /behavior page -->

        <!-- app button config override -->
        <key type="s" name="appbutton-config-override">
            <default>''</default>
            <summary>AppButton config override</summary>
        </key>
        <!-- /app button config override -->

    </schema>
</schemalist>
